{
  "manifest_version": 2,
  "name": "Visual Style Editor",
  "version": "1.0",
  "description": "Visual Style Editor是一款可视化样式编辑器,用于所见及所得式的样式重定义",
  "icons":{"128":"logo.png"},
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/js/jquery/jquery.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "Visual Style Editor"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "logo.png",
    "plugin.html",
    "assets/**/*"
  ]
}
